<div style="margin-top: 40px"/>
<h2><%= @phone.brand %> <%= @phone.model %></h2>
<p><h3>Description:</h3></p>
<%= @phone.description %>
<% if !admin_signed_in? %>
    <p><%= link_to "Buy", new_phone_ordernoreg_path(@phone.id) %></p>
<h3>Comments</h3><hr>
<%= link_to "Add comment", new_phone_comment_path(@phone.id) %><br>
<%end%>

<% @comments.each do |c| %>
    <p><b><%= c.user.email %></b></p>
    <p><%= c.body %></p>
    <% if user_signed_in? && c.user.id == current_user.id %>
      <%= link_to "Edit", edit_phone_comment_path(c.id) %>
      <%= link_to "Delete", phone_comment_path(c.id), method: :delete %>
    <%end%>
    <hr>
  <%end%>
